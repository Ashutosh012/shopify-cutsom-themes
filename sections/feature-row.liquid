<div class="page-width feature-row liebwerk-home">
  <div class="liebwerk-section">
    {% capture image_layout %}
    <div class="feature-row__item">    
      <div class="liebwerk-img">
        {%- assign social = "Instagram" | split: ' ' -%}
        {%- assign social_link = social | prepend: 'social_' | append: '_link' | downcase -%}
        {%- assign soical_filter =  social_link | replace: '["', '' -%}
        {%- assign social_filter_link =  soical_filter | replace: '"]', '' -%}
        {%- assign icon_link = social | prepend: 'icon-' | downcase -%}
        {%- assign icon_filter =  icon_link | replace: '["', '' -%}
        {%- assign icon_filter_link =  icon_filter | replace: '"]', '' -%}
        {% if section.settings.image_1 != blank %}
          <div class="liebwerk-img-wrap">
            <img src="{{ section.settings.image_1 | img_url: '900x900' }}" alt="{{ section.settings.image_1.alt | escape}}">
            <div class="liebwerk-img-overlay">
              <a href="{{ settings[social_filter_link] | escape }}">
                {%- include icon_filter_link -%}
              </a>
            </div>
          </div>
        {% endif %}
        {% if section.settings.image_2 != blank %}
          <div class="liebwerk-img-wrap">
            <img src="{{ section.settings.image_2 | img_url: '900x900' }}" alt="{{ section.settings.image_2.alt | escape}}">
            <div class="liebwerk-img-overlay">
              <a href="{{ settings[social_filter_link] | escape }}">
                {%- include icon_filter_link -%}
              </a>
            </div>
          </div>
        {% endif %}
        {% if section.settings.image_3 != blank %}
          <div class="liebwerk-img-wrap">
            <img src="{{ section.settings.image_3 | img_url: '900x900' }}" alt="{{ section.settings.image_3.alt | escape}}">
            <div class="liebwerk-img-overlay">
              <a href="{{ settings[social_filter_link] | escape }}">
                {%- include icon_filter_link -%}
              </a>
            </div>
          </div>
        {% endif %}
        {% if section.settings.image_4 != blank %}
          <div class="liebwerk-img-wrap">
            <img src="{{ section.settings.image_4 | img_url: '900x900' }}" alt="{{ section.settings.image_4.alt | escape}}">
            <div class="liebwerk-img-overlay">
              <a href="{{ settings[social_filter_link] | escape }}">
                {%- include icon_filter_link -%}
              </a>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
    <div class="feature-row__item liebwerk-content-main">
      <div class="liebwerk-content">
        <div class="liebwerk-content-wrap">
          {% if section.settings.title != blank %}
            <h3 class="h3 {{section.settings.title | downcase}}-heading-text">{{ section.settings.title | escape }}</h1>
          {% endif %}
          {% if section.settings.feature_description != blank %}
            <p>{{ section.settings.feature_description }}</p>
          {% endif %}
        </div>
        {%- assign socials = "Facebook Twitter Pinterest Instagram Tumblr Snapchat YouTube Vimeo" | split: ' ' -%}
        <ul class="social-icons">
          {%- for social in socials -%}
          {%- assign social_link = social | prepend: 'social_' | append: '_link' | downcase -%}
          {%- assign icon_link = social | prepend: 'icon-' | downcase -%}
          {%- if settings[social_link] != blank -%}
            <li>
              <a style="color:{{ section.settings.social_media_icon_color}}" href="{{ settings[social_link] | escape }}" aria-describedby="a11y-external-message">
                {%- include icon_link -%}
              </a>
            </li>
          {%- endif -%}
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>
  {% endcapture %}
  
  <div class="feature-row">
    {% if section.settings.layout == 'left' %}
      {{ image_layout }}
    {% endif %}

    {% if section.settings.layout == 'right' %}
      {{ image_layout }}
    {% endif %}
  </div>
</div>

<style>
.liebwerk-interior-btn{ background-color: {{section.settings.color_bg}}}
.liebwerk-heading-text{ color: {{section.settings.heading_text_color}} }
</style>

