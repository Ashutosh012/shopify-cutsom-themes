<div class="page-width rich-text">
  <div class="grid">
    <div style="z-index:9999;" class="grid__item {% unless section.settings.full_width %} medium-up--two-thirds medium-up--push-one-sixth{% endunless %}">
      {% if section.settings.section_title != blank %}
        <div class="rich-text__heading--{{ section.settings.text_size }}">
          <h2 class="hero-title-page">{{ section.settings.section_title | escape }}</h2>
        </div>
      {% endif %}
      <div class="mobile">
        <img src="{{ section.settings.image | img_url: '500x500' }}">
      </div>
    </div>
    <div class="grid__item hero-img desktop">
      <img src="{{ section.settings.image | img_url: '500x500' }}">
    </div>
  </div>
</div>

{%- if section.settings.full_width_section -%}
<style>
  #shopify-section-{{ section.id }} .page-width {
    padding-left: 0px;
    padding-right: 0px;
    max-width: 100%;
  }
  .hero-img {
    right: 0 !important;
  }
</style>
{%- endif -%}

<style>
  .hero-title-page {
    font-size: 40px;
  }
  .hero-img{
    float: right;
    position: absolute;
    right: 55px;
    top: 40px;
  }
  .hero-img img{
    float: right;
  }
  #shopify-section-faq-hero-section{
    background-color: {{ section.settings.color_bg }};
    padding: 150px 0px;
  }
  @media (min-width: 320px) and (max-width: 480px) {
    .hero-img {
      right: 0px;
      margin: 0 auto;
      padding: 0;
    }
    #shopify-section-faq-hero-section{
      padding: 55px 0px;
    }
  }
</style>


