<div data-section-id="{{ section.id }}" data-section-type="blog-section">
  <section class="home-blog-layout">
    <div style = "width:98%;" class="container">
      <div class="row">
        <div class="home-blog-inner">
          <div class="page-title">
            <h2 class="title">{{ section.settings.title }}</h2>
            <span class="caption">{{ section.settings.caption }}</span>
          </div>
          <div class="clearfix home-blog-content-inner">
            <div class="home-blog-content">
              {% unless blogs[section.settings.select_blog].articles_count == 0 or blogs[section.settings.select_blog].articles_count == '' %}
              {% for article in blogs[section.settings.select_blog].articles limit:3 %}
              <div class="article-content col-sm-4 not-animated" data-animate="fadeInUp" data-delay="{{ forloop.index }}00">
                <div class="group-blog-top">
                  {% if article.image %}
                  <div class="top-banner article_banner_show article-image"> 
                    <a href="{{ article.url }}">
                      <img src="{{article.image | img_url: '720x', crop:'center' | split:'?v=' | first }}" alt="" />
                    </a>
                  </div>
                  {% endif %}
                </div>
                <div class="articleinfo_group">
                  <ul class="article-info list-inline">
                    <li class="article-date">
                      <i class="fa fa-calendar-check-o"></i>
                      {{article.published_at | date: '%b %d, %Y'}}
                    </li> 
                    <li class="article-comment">
                      <span>
                        <a href="{{article.url}}#comments">
                          <i class="fa fa-comments-o"></i>
                          <span>{{ article.comments_count }}</span> {{ article.comments_count | pluralize: 'Kommentar', 'Kommentare' }}
                        </a>
                      </span>
                    </li>                                          
                  </ul>
                  <div class="article-title">                     
                    <h2 class="article-name"><a href="{{ article.url }}">{{ article.title }}</a></h2>                                            
                  </div>
                  <div class="article-des">                     
                    {{ article.content | strip_html | truncatewords : 30 }}                                      
                  </div>
                  <a class="article-action" href="{{ article.url }}">{{ section.settings.action_text }}</a>
                </div> 
              </div>
              {% endfor %}
              {% else %}
              <div class="grid grid--uniform grid--blog">
                {% for i in (1..3 ) %}
                <div class="article-content col-sm-4">
                  <div class="article-inner">
                    <div class="article-left">
                      <a class="article-img" href="#">
                        <img src="{{ '870x430.png' | asset_url | split:'?v=' | first }}" alt=""/>
                      </a>                   
                    </div>
                    <div class="article-right">
                      <div class="article-name"><a href="#">{{ 'homepage.onboarding.blog_title' | t }}</a></div>
                      <div class="article-description">
                        <p>{{ 'homepage.onboarding.blog_excerpt' | t | truncatewords: 30 }}</p>
                      </div>
                    </div>
                  </div>
                </div>
                {% endfor %}
              </div>
              {% endunless %}
            </div>
          </div>          
          <div class="blog-action clearfix">
            <a href="{{ blogs[section.settings.select_blog].url }}" class="page-action">{{ section.settings.go_to }}</a>
          </div>          
        </div>
      </div>
    </div>
  </section>
</div>
{% schema %}
{
  "name": "Blog",
  "class": "index-section index-section-blog",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
	{
      "type": "text",
      "id": "caption",
      "label": "caption"
    },
	{
      "type": "text",
      "id": "go_to",
      "label": "Go to Blog"
    },
	{
      "type": "blog",
      "id": "select_blog",
      "label": "Select blogs"
    },
	{
      "type": "text",
      "id": "action_text",
      "label": "Action text"
    }
  ],
  "presets": [{
    "name": "Blog",
    "category": "List Blog"
  }]
}
{% endschema %}